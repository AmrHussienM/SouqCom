<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please confirm your shipment"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/shippment_name"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your name"/>

    <EditText
        android:id="@+id/shippment_phone"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Phone Number"/>


    <EditText
        android:id="@+id/shippment_address"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/shippment_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Home Address"/>


    <EditText
        android:id="@+id/shippment_city"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/shippment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your City Name"
        />

    <Button
        android:id="@+id/confirm_order_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:layout_margin="20dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/white"/>



</android.support.constraint.ConstraintLayout>